<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_action_examlogo" />


        <org.spmakings.examshell.customview.AvenirHeavy
            android:id="@+id/sub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="JEST"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/selected_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.90"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <org.spmakings.examshell.customview.AvenirLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_white_ring"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:text="Practice Test"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <org.spmakings.examshell.customview.AvenirLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner_white_ring"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Study Material"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
