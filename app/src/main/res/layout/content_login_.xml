<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.spmakings.examshell.Login_Activity"
    tools:showIn="@layout/activity_login_">


    <LinearLayout
        android:id="@+id/header_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp">

        <org.spmakings.examshell.customview.AvenirHeavy
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="@color/darker_gray"
            android:textSize="50sp" />

        <org.spmakings.examshell.customview.AvenirLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="elight"
            android:textColor="@color/darker_gray"
            android:textSize="40sp" />


        <org.spmakings.examshell.customview.AvenirHeavy
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" I"
            android:textColor="@color/darker_gray"
            android:textSize="50sp" />

        <org.spmakings.examshell.customview.AvenirLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nstitute"
            android:textColor="@color/darker_gray"
            android:textSize="40sp" />

    </LinearLayout>

    <org.spmakings.examshell.customview.AvenirRoman
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_lvl"
        android:layout_below="@+id/header_lvl"
        android:layout_marginTop="10dp"
        android:paddingLeft="4dp"
        android:text="Signin to continue"
        android:textColor="@color/darker_gray"
        android:textSize="20sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_lvl"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="10dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />


            <org.spmakings.examshell.customview.AvenirLightEditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="4dp"
                android:textColor="@color/darker_gray"
                android:textColorHint="@color/darker_gray"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray" />


            <org.spmakings.examshell.customview.AvenirLightEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="4dp"
                android:textColor="@color/darker_gray"
                android:textColorHint="@color/darker_gray"
                android:textSize="18sp" />


            <org.spmakings.examshell.customview.AvenirRegular
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingBottom="12dp"
                android:paddingLeft="4dp"
                android:paddingRight="32dp"
                android:paddingTop="16dp"
                android:text="Login"
                android:textColor="@color/darker_gray"
                android:textSize="20sp" />

            <org.spmakings.examshell.customview.AvenirLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="OR"
                android:textColor="@color/darker_gray"
                android:textSize="16sp" />

            <org.spmakings.examshell.customview.AvenirRegular
                android:id="@+id/creat_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:text="Create Account"
                android:textColor="@color/darker_gray"
                android:textSize="20sp" />

            <org.spmakings.examshell.customview.AvenirLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="32dp"
                android:paddingTop="16dp"
                android:text="Forgot Password ?"
                android:textColor="@color/darker_gray" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
